

<%- include("../../partials/head.ejs") %>

<div class="container my-container ">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body shadow-lg mb-2 bg-white rounded ">
                <h3>Login To Your Account</h3>
                <form action="/auth/login" , method="POST" class="p-3">
                    
                    <div class="form-group p-2">
                        <label for="email">Enter your Email</label>
                        <input type="email" name="email" id="email" class="form-control
                        <%= error.email ? 'is-invalid' : '' %>" value="<%= value.email ? value.email : '' %>">
                        <div class="invalid-feedback ">
                            <%= error.email && error.email %>
                        </div>

                    </div>
                    <div class="form-group p-2">
                        <label for="password">Enter your password</label>
                        <input type="password" name="password" id="password" class="form-control
                        <%= error.password ? 'is-invalid' : '' %>" value="<%= value.password ? value.password : '' %>">
                        <div class="invalid-feedback ">
                            <%= error.password && error.password %>
                        </div>

                    </div>
                    
                    <input type="submit" class="btn btn-primary p-2 m-2" value="Login"> 
                    
                </form>
                    <a href="/auth/signup"class="my-3 text-center"> Don't have any Account ? Create new one</a>
            </div>
        </div>
    </div>
</div>

<%- include("../../partials/footer.ejs") %>
</body>
</html>